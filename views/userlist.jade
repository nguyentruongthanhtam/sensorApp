extends layout
block ref
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src='/javascripts/userlist.js',type="text/javascript")
	script(src='/stylesheets/bower_components/highcharts/highstock.js',type="text/javascript")

block content
	div.container
		
		div.icon
			//- img#connected(src="connected1small.png")
			div.circle2.blackC
				div.circleInner
				img.disconnected(src="disconnected1small.png")
			span#type
			div.click Connect to device
		div.row
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Humidity
				.circle.blueC
				.circlePanel#humidity
			
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Temperature
				.circle.redC
				.circlePanel#temperature
		div.row
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Luxometer
				.circle.yellowC
				.circlePanel#luxometer
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Accelerometer
				.circle.greenC
				.circlePanel#accelerometer(style="font-size:15pt")
		div#graph(style="min-width: 310px; height: 400px; margin: 0 auto;backgound-color: blue")

		div.row
			
			div.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-12
				div.panel.panel-default
					div.panel-heading 
						h3.panel-title Show Records by Hour
					div.panel-body
						form(action="http://192.168.11.5:8080/chooseDate",method="post",role='form')
							select.form-group.form-control#dateChoice(name="dateForm")
								each item, l in datelist
									option(value="#{item.name}") #{item.name}
							select.form-group.form-control#typeChoice(name="typeForm")
								option(value='temp') Temperature 
								option(value='humi') Humidity
								option(value='lux') Light Level
							div.form-horizontal
								div.form-group
									label.control-label.col-md-3.col-lg-3 From
									div.col-md-9.col-lg-9
										input.form-control(name="hourF")
								div.form-group
									label.control-label.col-md-3.col-lg-3 To
									div.col-md-9.col-lg-9
										input.form-control(name="hourT")
								
							div.form-group
								button.btn.btn-default(type="submit",name="submitHour",value="submit") Export
		
extends layout
block ref
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/dashboard.js',type="text/javascript")
    script(src='/stylesheets/bower_components/highcharts/highstock.js',type="text/javascript")

block content

    nav
        .nav-wrapper
            a.button-collapse(data-activates="mobile")
                i.medium.material-icons menu
            a.brand-logo.center sensorApp
            ul.right.hide-on-med-and-down
                li
                    a(href="#") Home
                li
                    a(href="#") About
            ul#mobile.side-nav
                li
                    a(href="#") Home
                li
                    a(href="#") About
    div.container

        div.row
            //- img#connected(src="connected1small.png")
            div.col.s12.m12.l12
                div.circle2.blackC.center-align
                    div.circleInner
                    //- img.disconnected(src="disconnected1small.png")
                    span.sensorStatus Discovering...
                
                span#type
                div.click Connect to device
                p
                    input(type="checkbox").filled-in#fib-temp
                    label(for="fib-temp") Temperature
                p
                    input(type="checkbox").filled-in#fib-humi
                    label(for="fib-humi") Humidity
                p
                    input(type="checkbox").filled-in#fib-lux
                    label(for="fib-lux") Light
                p
                    input(type="checkbox").filled-in#fib-gyro
                    label(for="fib-gyro") Movement
                a.waves-effect.btn.btn-connect.disabled.center-align Connect
                a.waves-effect.btn.btn-disconnect.disabled.center-align Disconnect
        div.row
            div.col.s12.m6.l6.containerCircle
                span Temperature
                .circle.redC
                .circlePanel#temperature
             div.col.s12.m6.l6
                div#graphTemp(style="min-width: 310px; height: 400px; margin: 0 auto;")

        div.row
            div.col.s12.m6.l6.containerCircle
                span Humidity
                .circle.blueC
                .circlePanel#humidity
             div.col.s12.m6.l6
                div#graphHumi(style="min-width: 310px; height: 400px; margin: 0 auto;")

        div.row
            div.col.s12.m6.l6.containerCircle
                span Luxometer
                .circle.yellowC
                .circlePanel#luxometer
             div.col.s12.m6.l6
                div#graphLux(style="min-width: 310px; height: 400px; margin: 0 auto;")
        //- Data record form
        div.row
            div.col.s12.m6.l6.containerCircle
                span Gyroscope
                .circle.yellowC
                .circlePanel(style="font-size:15pt;")#gyroscope
            div.col.s12.m6.l6.containerCircle
                span Door state
                .circle.yellowC
                .circlePanel(style="font-size:15pt;")#state

        div.row
            div.col.s12.m12.l12
                div#graphState(style="min-width: 310px; height: 400px; margin: 0 auto; ")
        //- Data record form 
        div.row
            div.col.s12.m12.l12.formData(style="margin-top:50px;")
                form(action="http://192.168.0.101:8080/report",method="post",role='form')
                    .input-field.col.s12
                        select#dateChoice(name="dateForm")
                            each item, l in datelist
                                option(value="#{item.name}") #{item.name}
                        label(for="dateForm") date
                    .input-field.col.s12   
                        select#typeChoice(name="typeForm")
                            option(value='temp') Temperature
                            option(value='humi') Humidity
                            option(value='lux') Light Level
                            option(value='state') State
                        label(for="typeForm") type
                    .input-field.col.s12                        
                        input(name="hourF",type="text").validate
                        label(for="hourF") From
                    .input-field.col.s12
                        input(name="hourT",type="text").validate
                        label(for="hourF") To
                    .input-field.col.s12
                        button.btn.btn-default(type="submit",name="submitHour",value="submit") Show
